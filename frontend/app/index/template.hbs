<div class="root">
  <div class="postcard">
    <form>
      <h2>Image</h2>
      <div class="uploader">
        {{file-uploader url="/api/v1/images" setImage=(action "setImage") uploading=(action "uploading") }}
        <progress style="display: {{uploadProgress}}" />
      </div>


      <h2>Message</h2>

      <div class="message">
        <div class="row">
          <div class="element">
            {{textarea type="text" value=message class="form-control"}}
          </div>
          <div class="element">
            <div>
              Your last order was on
              {{moment-format lastOrder 'DD.MM.YYYY HH:mm'}}<br />
              This was {{moment-from-now lastOrder}}
            </div>
            <div>
              <div class="alert alert-{{resultClass}}">
                {{result}}
              </div>
            </div>
          </div>
        </div>
      </div>

      <h2>Recipient</h2>

      <div class="recipient">
        <div class="row">
          <div class="element">
            <label>Company</label>
            {{input type="text" value=company}}
          </div>
          <div class="element">
            <label>Salutation</label>
            {{input type="text" value=salutation}}
          </div>
        </div>

        <div class="row">
          <div class="element">
            <label>Given Name</label>
            {{input type="text" value=givenName}}
          </div>
          <div class="element">
            <label>Family Name</label>
            {{input type="text" value=familyName}}
          </div>
        </div>

        <div class="row">
          <div class="element">
            <label>Street</label>
            {{input type="text" value=street}}
          </div>

          <div class="element post_code">
            <label>Post Code</label>
            {{input type="number" min="1000" max="9999" value=postCode}}
          </div>

          <div class="element">
            <label>Place</label>
            {{input type="text" value=place}}
          </div>
        </div>
      </div>

      <h2>Action!</h2>
      <div>
        <button {{action 'send'}} class="btn">Send Postcard</button>
      </div>
    </form>

  </div> {{!-- postcard end --}}

  <div class="image_list">
    {{image-lister}}
  </div>
</div>
