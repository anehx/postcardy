<div class="img-lister">
  <div class="button">
    <a class="btn slider-button {{unless isUpEnabled "disabled"}}"
       {{action 'up'}}>Up</a>
  </div>


  {{#each images as |image|}}
  <div class="image">
   <img src="{{image.url}}" {{action "choosePic" image }} />
   <div class="buttonbar"><a href="#" {{action 'choosePic' image }}>Use</a> |
     <a href="#" {{action "deleteImage" image}}>Delete</a>
   </div>
  </div>
  {{/each}}

  <div class="button">
    <a class="btn slider-button {{unless isDownEnabled "disabled"}}"
       {{action 'down'}}>Down</a>
  </div>
</div>
